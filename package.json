{
    "name": "ComplexToe",
    "productName": "ComplexToe",
    "version": "1.0.0",
    "description": "Conquer your opponent.",
    "main": "src/index.js",
    "build": {
        "appId": "com.josefstips.ComplexToe",
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "icon.ico"
        },
        "nsis": {
            "allowToChangeInstallationDirectory": true,
            "oneClick": false,
            "installerIcon": "icon.ico",
            "uninstallerIcon": "icon.ico",
            "installerHeaderIcon": "icon.ico",
            "uninstallDisplayName": "ComplexToe",
            "runAfterFinish": true,
            "deleteAppDataOnUninstall": false,
            "multiLanguageInstaller": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "installerSidebar": "./nsisSideBar.bmp",
            "uninstallerSidebar": "./nsisSideBar.bmp"
        }
    },
    "scripts": {
        "start": "electron .",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "echo \"No linting configured\"",
        "nodemon": "nodemon index.js",
        "dist": "electron-builder"
    },
    "keywords": [],
    "author": {
        "name": "Josef Stips",
        "email": "stipsjosef@gmail.com"
    },
    "license": "Costum",
    "dependencies": {
        "@socket.io/admin-ui": "^0.5.1",
        "electron-squirrel-startup": "^1.0.0",
        "socket.io": "^4.7.1",
        "socket.io-client": "^4.7.1"
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.2.1",
        "@electron-forge/maker-deb": "^6.2.1",
        "@electron-forge/maker-rpm": "^6.2.1",
        "@electron-forge/maker-squirrel": "^6.2.1",
        "@electron-forge/maker-zip": "^6.2.1",
        "@electron-forge/plugin-auto-unpack-natives": "^6.2.1",
        "electron": "^28.1.4",
        "electron-builder": "^24.6.4"
    }
}